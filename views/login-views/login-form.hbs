<div class="form">
  <ul class="tab-group">
    <li class="tab active signup"><a class="signuplink" href="#signup">Sign Up</a></li>
    <li class="tab login"><a class="loginlink" href="#login">Log In</a></li>
  </ul>
  <div class="tab-content">
    <div id="signup">
      <h1>Register your account</h1>
      <form  action="/process-signup" method="POST">
        <div class="top-row">
          <div class="field-wrap">
            <input type="text" name="firstName" placeholder="First Name*"/>
          </div>
          <div class="field-wrap">
            <input type="text" name="lastName" placeholder="Last Name*"/>
          </div>
        </div>
        <div class="field-wrap">
          <input type="email" name="email" placeholder="Email Address*"/>
        </div>
        <div class="field-wrap">
          <input type="password" name="password" placeholder="Set Password*"/>
        </div>
        <button type="submit" class="button button-block">Create Your Account</button>
      </form>
    </div>

    <div id="login">
      <h1>Welcome</h1>
      <form  action="/process-login" method="POST">
        <div class="field-wrap">
          <input type="email" name="email" placeholder="Email Address*"/>
        </div>
        <div class="field-wrap">
          <input type="password" name="password" placeholder="Password*"/>
        </div>
        <button class="button button-block">Log In</button>
      </form>
    </div>
  </div><!--tab content-->
</div><!--/form-->
