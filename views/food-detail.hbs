<h2>Food detail</h2>

<h2>{{myFoods.foodName}}</h2>
<p>{{myFoods.description}}</p>
{{#each myFoods.images}}
<a class="lightbox" href="#dog"><img src="{{this}}"></a>
{{/each}}

<section class="places-reviews">
    <form action="/food/{{myFoods._id}}/process-review" method="POST">
        <label for="">
            Your Name:
            <input type="text" name="firstName" placeholder="Anton Ego">
        </label>

        <label for="">
            Commments:
            <input type="text" name="comments" placeholder="My favorite places!">
        </label>

        <button>Submit Review</button>
    </form>

    <ul>
        {{#each myFoods.reviews}}
        <li>
            <p><b>{{this.firstName}}</b>says:</p>
            <p>{{this.comments}}</p>
        </li>
        {{/each}}
    </ul>
</section>